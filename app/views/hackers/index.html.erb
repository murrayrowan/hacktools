<h2>Hackers</h2>

<ul class="thumbnails">

<% @hackers.each do |hacker| %>

  <li class="span3">
     <div class="thumbnail">
    <% 
    photo_tag = '<img src="http://m.c.lnkd.licdn.com/mpr/mpr/shrink_200_200/p/4/000/1ae/20e/2e92e48.jpg" height="250" width="150" alt="' + hacker.fname + ' ' + hacker.lname + ' photo">'
    hacker_name =  hacker.fname + ' ' + hacker.lname
    %>

        <%= link_to raw(photo_tag), hacker %>
        <h3><%= link_to raw(hacker_name), hacker %></h3>
        
        <p><%= hacker.jobtitle %></p>
        <p><%= hacker.city + ', ' + hacker.country%></p>
        <p>Team: $teamname</p>
        <p>Hacks: $hacknames</p>
     <p>My tags: <%= raw hacker.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
        <p><a href="https://twitter.com/<%= hacker.twitter_id %>"><%= hacker.twitter_id %> on twitter</a></p>
        <p><%= link_to 'Update your details', edit_hacker_path(hacker) %></p>
     </div>
  </li>

<% end %>

</ul>

<div id="tag_cloud">
        <% tag_cloud Hacker.tag_counts, %w[s m l] do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
</div>

<%= link_to 'New Hacker', new_hacker_path %>
