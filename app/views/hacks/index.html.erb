<h2>Hacks</h2>

<ul class="thumbnails">

<% @hacks.each do |hack| %>

  <li class="span3">
     <div class="thumbnail">
     <% eurl = "/hacks/#{hack.id}/" %>
     <%= link_to image_tag(hack.logo, alt: "#{hack.name} logo", height: 200, width: 300), eurl %>
      <h3><%= link_to "#{hack.name}", eurl %></h3>
        <p><%= hack.description %></p>
        <p><%= raw hack.tag_list.map { |t| link_to t, tag_path(t) }.join(', ') %></p>
        <p><%= link_to 'Show', hack %></p>
        <p><%= link_to 'Edit', edit_hack_path(hack) %></p>
        <p><%= link_to 'Delete', hack, method: :delete, data: { confirm: 'Are you sure?' } %></p>
     </div>
  </li>

<% end %>

</ul>

<h3>Filter Hacks by Tag</h3>

  <div id="tag_cloud">
        <% tag_cloud Hack.tag_counts, %w[s m l] do |tag, css_class| %>
          <%= link_to tag.name, tag_path(tag.name), class: css_class %>
        <% end %>
  </div>

<p><%= link_to 'Create a New Hack for this event', new_hack_path %></p>