<%= simple_form_for(@team, :url => path, :method => method, :html => {:class => 'form-horizontal' }) do |f| %>
<%= f.error_notification %>
  <%= f.input :name, label: "Team Name", required: true %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :logo, label: "Logo" %>
  <%= f.input :photo, label: "Photo" %>
  <%= f.hidden_field :event_id, value: params['id'] %>
  <%= f.error :base %>
  <%= f.button :submit, btn_txt %>
<% end %>