
<%= simple_form_for(@event, :url => path, :method => method, :html => {:class => 'form-horizontal' }) do |f| %>
<%= f.error_notification %>
  <%= f.input :name, label: "Event Name", required: true %>
  <%= f.input :description, label: "Description" %>
  <%= f.input :tag_list, hint: 'comma separated.' %>
    <% #= f.input :event_date, :as => :string %>
  <%= f.input :event_date, :as => :date, :ignore_time => true %>
  <%= f.input :event_date, :as => :time, label: "Start time", :ignore_date => true %>
  <%= f.input :logo, hint: 'url' %>
  <%= f.input :twitter_id %>
  <%= f.input :owner, input_html: { value: current_user.email } %>
  <%= f.input :venue %>
  <%= f.input :street_address %>
  <%= f.input :city %>
  <%= f.input :zipcode %>
  <%= f.input :email %>
  <%= f.input :twitter_id %>
  <%= f.input :facebook_id %>
  <%= f.input :url %>
  <%= f.error :base %>
  <%= f.button :submit, btn_txt %>
<% end %>