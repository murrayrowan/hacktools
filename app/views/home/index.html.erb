<h2>Upcoming Hack Events</h2>

<ul class="thumbnails">
<% @events.each do |event| %>
  <li class="span4">
     <div class="thumbnail">
     <div class="span4">
     <% eurl = "/events/#{event.id}/" + prep_string_for_url(event.name) %>
     <%= link_to image_tag(event.logo, alt: "#{event.name} logo", height: 200, width: 300), eurl %>
     </div>
      <h3><%= link_to "#{event.name}", eurl %></h3>
	<p><%= l event.time, :format => :long %>.</p>
	<p><%= event.venue %>, <%= event.street_address %>, <%= event.city %>.</p>
        <p><%= event.description %></p>
  <div>
    <a href="<%= event.url %>" class="btn btn-primary btn-small clearfix">Register Here</a></div>
  </div>
  </li>
<% end %>
</ul>

<h2 style="clear:left">Previous Hack Events</h2>

<ul class="thumbnails">
<% @past_events.each do |event| %>
  <li class="span4">
     <div class="thumbnail">
     <div class="span4">
     <% eurl = "/events/#{event.id}/" + prep_string_for_url(event.name) %>
     <%= link_to image_tag(event.logo, alt: "#{event.name} logo", height: 200, width: 300), eurl %>
     </div>
      <h3><%= link_to "#{event.name}", eurl %></h3>
  <p><%= l event.time, :format => :long %>.</p>
  <p><%= event.venue %>, <%= event.street_address %>, <%= event.city %>.</p>
        <p><%= event.description %></p>
  <div>
    <a href="/events/<%= event.id %>/<%= prep_string_for_url(event.name) %>/hacks/" class="btn btn-primary btn-small clearfix">Browse the Hacks</a></div>
  </div>
  </li>
<% end %>
</ul>
